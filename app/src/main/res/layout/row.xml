<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">


            <TextView
                android:id="@+id/asset_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1128"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="8" />

            <TextView
                android:id="@+id/make_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Dell Laptop"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/asset_id_txt"
                app:layout_constraintTop_toTopOf="@+id/asset_id_txt"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="12" />


            <TextView
                android:id="@+id/model_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Optiplex 2030"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/asset_id_txt"
                app:layout_constraintTop_toBottomOf="@+id/make_txt"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="15" />


            <TextView
                android:id="@+id/current_user_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Corey Smith"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="12" />


            <TextView
                android:id="@+id/serial_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="123456"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.964"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="15" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>